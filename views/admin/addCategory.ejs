<script>
  $(document).ready(function() {
    // Show modal on button click
    $('#showModal').click(function() {

    });

    // Hide modal on close button or background click
    $('.close, .modal').click(function() {
      $('.modal').hide();
    });

    // Prevent modal from closing on modal content click
    $('.modal-content').click(function(e) {
      e.stopPropagation();
    });

    $('#edit-category-form').submit(function(e) {
      e.preventDefault();
      const categoryId = $('#editCategoryId').val()
      $.ajax({
        url: '/admin/api/edit-category/' + categoryId,
        type: 'patch',
        data: $('#edit-category-form').serialize()
      }).done(res => {
        console.log('success');
        location.reload();
      }).fail(err => {

      })
    })
  });

  //edit category

  function editCategory(categoryId) {
    $.ajax({
      url: '/admin/api/edit-category/' + categoryId,
      type: 'get',
    }).done(res => {
      $('#editCategory').val(res.name);
      $('#editCategoryId').val(res._id);
      $('.modal').show()
    }).fail(err => {

    })
  }

  //delete category
  function deleteCategory(catId) {
    swal({
        title: "Are you sure?",
        text: "Once deleted, you will not be able to recover this category!",
        icon: "warning",
        buttons: true,
        dangerMode: true,
      })
      .then((willDelete) => {
        if (willDelete) {
          $.ajax({
            url: '/admin/api/delete-category/' + catId,
            type: 'delete',
            success(response) {
              if (response.status) {
                swal("Category has been deleted!", {
                  icon: "success",
                });
              } else {
                swal("Oops!", "Something went wrong. Category not deleted!", "error");
              }
            }
          })
        } else {
          swal("Category is safe!");
        }
      });
  }
</script>

