<main class="main">
  <div class="page-header breadcrumb-wrap">
  </div>
  <section class="mt-50 mb-50">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="table-responsive">
            <table class="table shopping-summery text-center clean">
              <thead>
                <tr class="main-heading">
                  <th scope="col">Image</th>
                  <th scope="col">Name</th>
                  <th scope="col">Price</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Subtotal</th>
                  <th scope="col">Remove</th>
                </tr>
              </thead>
              <tbody>
                <tr><% cartItems.forEach(function(item) { %>

             
              
                  <td class="image"><img src="/productImages/<%=item.carted.img[0]%>" alt="#"></td>
                  <td class="product-des">
                    <h5 class="product-name"><a href="shop-product-right.html"></a></h5>
                    <p class="font-xs"><%=item.carted.name%><br> 
                    </p>
                  </td>
                  <td class="price" data-title="Price"><span>₹<%=item.carted.price%></span></td>
                  <td class="text-center" data-title="Stock">
                    <div id="quantity" class="detail-qty border radius  m-auto">
                      <a href="#" class="qty-down"><i class="fi-rs-angle-small-down" ></i></a>
                      <span class="qty-val"><%=item.quantity%></span>
                      <span class="productId" hidden><%= item.carted._id %></span>
                      <span class="userId" hidden><%= user._id %></span>
                      <a href="#" class="qty-up"><i class="fi-rs-angle-small-up"></i></a>
                    </div>
                  </td>
                  <td class="text-right" data-title="Cart">
                    <span>₹<%= item.quantity * item.carted.price %></span>
                  </td>
                  <td class="action" data-title="Remove"><a href="#" class="text-muted"><i class="fi-rs-trash"></i></a></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <div class="cart-action text-end">
            <a class="btn  mr-10 mb-sm-15"><i class="fi-rs-shuffle mr-10"></i>Update Cart</a>
            <a class="btn "><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>
          </div>
          <div class="divider center_icon mt-50 mb-50"><i class="fi-rs-fingerprint"></i></div>
          <div class="row mb-50">
