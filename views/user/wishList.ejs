<main class="main">
  <% if(wishlistCount > 0) { %>

  <section class="mt-50 mb-50">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="table-responsive">
            <table class="table shopping-summery text-center">
              <thead>
                <tr class="main-heading">
                  <th scope="col" colspan="2">Product</th>
                  <th scope="col">Price</th>
                  <!-- <th scope="col">Stock Status</th> -->
                  <th scope="col">Action</th>
                  <th scope="col">Remove</th>
                </tr>
              </thead>
              <tbody>
                <% wishlistProducts.forEach(function(item) { %>


                <tr>
                  <td class="image product-thumbnail"><img src="/productImages/<%=item.wishListed.img[0]%>" alt="#"></td>
                  <td class="product-des product-name">
                    <h5 class="product-name"><a href="shop-product-right.html"><%=item.wishListed.name%></a></h5>
                    <p class="font-xs"><%=item.wishListed.description%>
                    </p>
                  </td>
                  <td class="price" data-title="Price"><span>â‚¹<%=item.wishListed.price%></span></td>
                  <!-- <td class="text-center" data-title="Stock">
                    <span class="color3 font-weight-bold">In Stock</span>
                  </td> -->
                  <td class="text-right" data-title="Cart">
                    <button class="btn btn-sm cool-button" onclick="addToCart('<%=item.productId%>')">
                      <i class="fi-rs-shopping-bag mr-2"></i>
                    </button>

                  </td>
                  <td class="action" data-title="Remove" onclick="removeFromWishList('<%=item.productId%>','<%=item._id%>')"><a href="#"><i class="fi-rs-trash"></i></a></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% }else {%>
  <div class="empty-wishlist-container ">
    <div class="empty-wishlist ">
      <h2>Cart is empty</h2>
      <br>
      <br>
      <br>
      <br>
      <img src="/frontEnd/imgs/theme/wishlist.png" alt="Empty wishlist">
      <br>
      <br>
      <br>
      <br>
      <a href="/shop"><p>Back to Shopping!!</p></a>
    </div>
  </div>
  <%}%>
</main>

<style>
  .empty-wishlist-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.empty-wishlist {
  text-align: center;
  width: 30%;
}

.small-image {
  max-width: 50%;
  height: auto;
}

</style>

<script>
  // add to cart ajax call
  function addToCart(proId) {
    $.ajax({
      url: '/add-to-cart/' + proId,
      method: 'POST',
      data: {
        proId: proId
      },
      success: (response) => {
        if (response.status) {
          location.reload()
        }
      }
    })
  }

  // remove from wishList ajax call
  function removeFromWishList(proId, wishListId) {
    $.ajax({
      url: '/remove-product-wishlist',
      method: 'DELETE',
      data: {
        proId: proId,
        wishListId: wishListId
      },
      success: (response) => {
        Swal.fire({
          icon: 'success',
          title: 'Product removed from wishlist',
          showConfirmButton: false,
          timer: 3000
        }).then(() => {
          location.reload()
        })
      }
    })
  }
</script>